@model MyTrainer.Models.Goals

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Goals</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            I would like to Gain Muscle
            <div class="col-md-10">
                <div class="radio">
                    @Html.RadioButtonFor(model => model.UserGoal,"GainMuscle", new { htmlAttributes = new { @class = "form-control" } })
                    <input id="UserGoal" name="UserGoal" type="radio" value="GainMuscle" />
                </div>
            </div>
        </div>
        <div class="form-group">
              I would Like to Lose Weight
            <div class="col-md-10">
                <div class="radio">
                    @Html.RadioButtonFor(model => model.UserGoal,"LoseWeight", new { htmlAttributes = new { @class = "form-control" } })
                    <input id="UserGoal" name="UserGoal" type="radio" value="LoseWeight" />
                </div>
            </div>
        </div>
        <div class="form-group">
            I would like to Maintain my Weight and be Healthy
            <div class="col-md-10">
                <div class="radio">
                    @Html.RadioButtonFor(model => model.UserGoal, "Maintain", new { htmlAttributes = new { @class = "form-control" } })
                    <input id="UserGoal" name="UserGoal" type="radio" value="Maintain" />
                </div>
            </div>
        </div>
       <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
