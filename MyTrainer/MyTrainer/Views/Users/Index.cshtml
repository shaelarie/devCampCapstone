@model IEnumerable<MyTrainer.Models.User>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<table class="table">
    <tr>
        <th style="width: 20%; text-align: center;">
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th style="width: 20%; text-align: center;">
            @Html.DisplayNameFor(model => model.HeightFt)
        </th>
        <th style="width: 20%; text-align: center;">
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th style="width: 40%;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @Html.HiddenFor(modelItem => item.Id)
        @Html.HiddenFor(modelItem => item.Username)
        @Html.HiddenFor(modelItem => item.LoginId)


        <td style="width: 20%; text-align: center;">
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td style="width: 20%; text-align: center;">
            @Html.DisplayFor(modelItem => item.HeightFt)
        </td>
        <td style="width: 20%; text-align: center;">
            @Html.DisplayFor(modelItem => item.HeightIn)
        </td>
        <td style="width: 40%; text-align: right;">
            @Html.ActionLink("Update Your Information", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
            @Html.ActionLink("Meal Plan","Index","MealPlans")
        </td>
    </tr>
}


</table>
