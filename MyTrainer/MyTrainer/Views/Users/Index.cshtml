@model IEnumerable<MyTrainer.Models.User>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }
    </style>
</head>
<body style="background-color:#6f4c7f; color:white;">
    <br />
    <br />
    <br />

    <table class="table">
        <tr>
            <th style="width: 60%; text-align: center; font-size: 35px;">
                Your Current Weight
            </th>
            <th style="width: 40%; text-align: center; font-size: 35px;">
                Your Current Height
            </th>
            <th style="width: 40%; font-size: 35px;">
                Your Current Age
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.Id)
                @Html.HiddenFor(modelItem => item.Username)
                @Html.HiddenFor(modelItem => item.LoginId)

                <td style="width: 20%; text-align: center;">
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td style="width: 20%; text-align: center;">
                    @Html.DisplayFor(modelItem => item.HeightFt)'
                    @Html.DisplayFor(modelItem => item.HeightIn)"
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
            </tr>
            <tr>
                <td style="width: 60%; text-align: center; font-size:30px;">
                    @Html.ActionLink("Update your Profile", "Edit", "Goals") |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Meal Plan", "Index", "MealPlans") |
                    @Html.ActionLink("Your Goals", "Index", "Goals") |
                    @Html.ActionLink("View Your Progress", "Index", "UserPhotos") |
                </td>
                <td style="width: 40%; text-align: right;"></td>
                <td style="width: 40%; text-align: right;"></td>
            </tr>
        }


    </table>
    <div class="container" style="width:100%;">
        <br>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/DisplayImages/pexels-photo-136404.jpeg" alt="Chania" width="460" height="345">
                </div>

                <div class="item">
                    <img src="~/DisplayImages/pexels-photo.jpg" alt="Chania" width="460" height="345">
                </div>

                <div class="item">
                    <img src="~/DisplayImages/food-healthy-morning-cereals.jpg" alt="Flower" width="460" height="345">
                </div>

                <div class="item">
                    <img src="~/DisplayImages/bigJeans.jpeg" alt="Flower" width="460" height="345">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>
</html>
